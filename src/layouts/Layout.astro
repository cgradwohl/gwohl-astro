---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="dark:bg-black bg-white px-28">
    <div
      class="mx-auto max-w-7xl dark:bg-zinc-900 bg-white border-x border-zinc-800 py-16 px-24"
    >
      <slot />
    </div>
  </body>
</html>
